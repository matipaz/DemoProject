@model List<DemoProject.Models.ProductViewModel>
@{
    ViewData["Title"] = "ProductsList";
}

<div class="text-center">
    <h1>Products</h1>
</div>
<div>
    <div>
        @Html.ActionLink("Add Product", "Add", "Product")
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Component</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th colspan="2"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => product.ProductType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => product.Brand)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => product.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => product.Stock)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Update", "Product", new { id = product.Id }, null)
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", "Product", new { id = product.Id }, null)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>